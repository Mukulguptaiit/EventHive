{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strictness */
    "strict": false,
    "noUncheckedIndexedAccess": true,
  "checkJs": false,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts/seed-credentials.ts",
    "scripts/seed-events.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/generated/**",
    "src/actions/**",
    "src/components/venue/**",
    "src/components/dashboard/**",
    "src/app/admin/**",
    "src/app/dashboard/**",
    "src/app/api/profile/**",
    "src/app/api/bookings/**",
    "src/app/api/debug/**",
  "src/app/api/webhooks/**",
    "src/lib/admin-utils.ts",
    "src/lib/auth-utils.ts",
    "src/lib/reservation-cleanup.ts",
    "scripts/seed-basic.ts"
  ]
}
